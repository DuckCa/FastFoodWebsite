@model FF_Fastfood.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<div class="container-fluid login-form">
    <div class="row">
        <div class="col-md-6 textfield-login">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Email)
                <h1 class="mb-5">ĐẶT LẠI MẬT KHẨU</h1>
                <div class="form-group">
                    <input class="col-12 mb-2 w-100 input-login" type="password" name="newpassword" id="newpassword" placeholder=" " required>
                    <label for="newpassword" class="input-label">Mật khẩu</label>
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input class="col-12 mb-2 w-100 input-login" type="password" name="confirmpassword" id="confirmpassword" placeholder=" " required>
                    <label for="confirmpassword" class="input-label">Mật khẩu</label>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger p-0" })
                </div>
                <div class="btn-login mb-3">
                    <button type="submit" name="submit" class="btn m-0" value="Login">Xác nhận</button>
                </div>
            }
        </div>
        <div class="col-md-6 p-0 position-relative imgfield-login d-none d-md-flex">
            <img class="img-fluid full-width-image" src="~/images/login.jpg" alt="Alternate Text" />
            <div class="overlay-login">
                <h3 class="overlay-login-text text-sha">ĐĂNG NHẬP NGAY ĐỂ ĐẶT NHỮNG MÓN ĂN NGON !</h3>
            </div>
        </div>
    </div>
</div>
}
